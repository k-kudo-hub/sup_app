<body>

<%= render "shared/header" %>
  <div class="body-wrap">
    <div class='form-header'>
      <h1 class='form-header-text'>
        マイページ
      </h1>
    </div>
    <div class="user-image-content">
      <% if @user.no_image? %>
        <%= image_tag '/assets/card.png', class:"user-show-img-box" %>
      <% else %>
        <%= image_tag (@user.picture.url), class:"user-show-img-box" %>
      <% end %>
    </div>
    <table class="show-table">
      <tbody>
        <tr>
          <th class="detail-item">名前</th>
          <td class="detail-value"><%= @user.name %></td>
        </tr>
        <tr>
          <th class="detail-item">社員番号</th>
          <td class="detail-value"><%= @user.staff_number %></td>
        </tr>
        <tr>
          <th class="detail-item">職位</th>
          <td class="detail-value">
            <%= @user.position %>
          </td>
        </tr>
        <tr>
          <th class="detail-item">保有資格</th>
          <td class="detail-value">
            <%= @user.qualification %>
          </td>
        </tr>
        <tr>
          <th class="detail-item">勤務形態</th>
          <td class="detail-value">
            <%= @user.work_style %>
          </td>
        </tr>
      </tbody>
    </table>
    <div class="to-root">
      <% if (current_user.email != "guest@example.com") && (current_user.email != "dispatch@example.com") && (current_user.id == @user.id) %>
          <%= link_to "スタッフ情報の編集", edit_user_registration_path, class:"edit-btn" %>
      <% end %>
    </div>
    <div class='form-header'>
      <h1 class='form-header-text'>
        フォロー中のお客様
      </h1>
    </div>  
    <%= render "shared/rooms" %>
    <div class="to-root">
      <%= link_to "トップへ戻る", :root, class:"root-btn" %> 
    </div>
  </div>
    <footer>
      <%= render "shared/footer" %>
    </footer>
</body>
