<header>
  <%= render "shared/header" %> 
</header>

<div class="body-wrap">
  <%= form_for(resource, as: resource_name, html:{class: "registration-main"}, url: session_path(resource_name)) do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        ログインページ
      </h1>
    </div>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <div class="one-form">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class="one-form">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
    </div>
    <div class='login-btn'>
      <%= f.submit "ログイン" ,class:"sign-in-btn" %>
    </div>
  </div>
  <% end %>
</div>

<%= render "shared/footer" %>