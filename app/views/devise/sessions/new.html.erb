<%= form_for(resource, as: resource_name, html:{class: "registration-main"}, url: session_path(resource_name)) do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      スタッフ情報入力
    </h1>
  </div>
  <%# <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%# <%= flash[:alert] %>
  <%# </div> %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">スタッフID</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :staff_number, class:"input-default", id:"email", placeholder:"", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"login-red-btn" %>
  </div>
</div>
<% end %>

