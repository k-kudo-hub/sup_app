<div class="user-data">
  <% if user_signed_in? %>
    <li><%= link_to current_user.name, "users/edit", class: "user-nickname" %></li>
    <li><%= link_to 'ログアウト', "/users/sign_out", method: :delete, class: "logout" %> </li>
    <% else %> 
    <li><%= link_to 'ログイン', "users/sign_in",method: :get, class: "login" %></li>
    <li><%= link_to '新規登録', "users/sign_up", class: "sign-up" %></li>
  <% end %>
</div>

<% if user_signed_in? %>
  <h2><%= link_to 'お客様情報登録', new_client_path, method: :get %></h2>  
<% end %>

<% if user_signed_in? %>
 <div class="room-area">
   <% @clients.each do |client| %>
    <div class="one-room-wrap">
      <div class="pic-area">
        <%= image_tag '/assets/human.png', size: '100x100', class: "room-image" %>
      </div>

      <div class="detail-area">
        <%= link_to "#{client.name} 様", client_path(client.id) %>
        <%= client.room_number %>
      </div>

      <div class="message-area">
        <% if @lists.empty? || !@lists.include?(client.id) %>
          <p><%= link_to "チャットを作成する", rooms_path(client.id), method: :post %></p>
        <% elsif client.room.messages.exists? %>
          <p><%= link_to "#{@message.content}", room_path(client.room.id),method: :post %></p>
        <% else %>
          <p><%= link_to "まだメッセージがありません", room_path(client.room.id),method: :post %></p>
        <% end %>
      </div>

    </div>
   <% end %>
 </div>
<% end %>
