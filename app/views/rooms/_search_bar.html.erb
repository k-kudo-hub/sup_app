<%= search_form_for @p, url: search_clients_path, class: "search-form" do |f| %>
  <%= f.text_field :name_cont, placeholder: "名前で検索", class: "search-input" %>
  <%= f.text_field :name_kana_cont, placeholder: "フリガナで検索", class: "search-input" %>
  <%= f.text_field :room_number_eq, placeholder: "居室番号で検索", class: "search-input" %>
  <%= button_tag type: :submit, class:"search" do %>
    <%= image_tag "search.png", class: "search-btn" %>
  <% end %>
<% end %>