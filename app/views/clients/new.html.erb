<header>
  <%= render "shared/header" %> 
</header>

<div class="body-wrap">
  <%= form_with model: @client, url: clients_path, method: :post, class: 'registration-main', multipart: true, local: true do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        お客様情報入力（基本情報）
      </h1>
    </div>
  <%= render 'shared/error_messages', model: f.object %> 

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">お名前</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :name, class:"input-default", id:"name", placeholder:"例) 田中太郎", maxlength:"40" %>
    </div> 
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">フリガナ</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :name_kana, class:"input-default", id:"name_kana", placeholder:"例) タナカタロウ", maxlength:"40" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">居室（お客様）番号</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :room_number, class:"input-default", id:"room-number" %>
    </div> 

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">現在の入居情報</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:status_id, Status.all, :id, :name, {}, {class:"input-default", id:"status"}) %> 
    </div>
    <div class="img-upload">
      <div class="weight-bold-text">
        写真（任意）
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :picture, id:"item-image" %>
      </div>
    </div> 
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">生年月日</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='input-birth-wrap'>
        <%= raw sprintf(
                    f.date_select(
                      :birth ,
                      class:'select-birth',
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 1920,
                      end_year: (Time.now.year - 5),
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
    </div>

    <div class='register-btn'>
      <%= f.submit "次の項目へ" ,class:"register-red-btn" %>
    </div>
  </div>
  <% end %>
</div> 

<footer>
  <%= render "shared/footer" %>
</footer>